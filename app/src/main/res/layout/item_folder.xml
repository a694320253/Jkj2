<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/pic_dir_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_photo_loading" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/p_12_dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_picture"
            android:textColor="@color/black_f6"
            android:textSize="@dimen/text_16_sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/photo_zero_default_text"
            android:textColor="@color/text_main_gray"
            android:textSize="@dimen/text_16_sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/p_15_dp"
        android:src="@drawable/dir_pic_choose"
        android:visibility="visible" />

</LinearLayout>
